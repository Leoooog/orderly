{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PocketBase: Serve (8090)",
            "type": "shell",
            "command": "./backend/pocketbase serve --http=\"0.0.0.0:8090\"",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Server started at",
                    "endsPattern": "Hit CTRL\\+C to stop the server"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "servers"
            }
        }
    ]
}